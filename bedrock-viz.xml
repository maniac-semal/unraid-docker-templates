<?xml version="1.0"?>
<Container version="2">
  <Name>plex</Name>
  <Repository>unmania/bedrock-viz-docker</Repository>
  <Registry>https://hub.docker.com/r/unmania/bedrock-viz-docker/</Registry>
  <Network>host</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support></Support>
  <Project>https://github.com/bedrock-viz/bedrock-viz</Project>
  <Overview>A fork of mcpe_viz, now maintained by Jasper Wan.[br]Bedrock Viz is a tool that parses Minecraft Bedrock Edition world files. It creates overview images from the world files, and reports lots of details on your world.</Overview>
  <Category>GameServers</Category>
  <WebUI>http://[IP]:[PORT:8080]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/maniac-semal/unraid-docker-templates/main/bedrock-viz.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/maniac-semal/unraid-docker-templates/main/img/minecraft_bedrock_viz.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DonateText></DonateText>
  <DonateLink></DonateLink>
  <Description>Bedrock Viz is a tool that parses Minecraft Bedrock Edition world files. It creates overview images from the world files, and reports lots of details on your world.</Description>
  <Networking>
    <Mode>host</Mode>
    <Publish>
      <Port>
        <HostPort>8080</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir/>
      <ContainerDir>/appdata</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir/>
      <ContainerDir>/input</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment>
      <Variable>
      <Value>30</Value>
      <Name>TIMEFRAME</Name>
      <Mode/>
    </Variable>
  </Environment>
  <Labels/>
  <Config Name="Minecraft World Save" Target="/input" Default="" Mode="rw" Description="Path of the Minecraft World folder for Map creation" Type="Path" Display="always" Required="false" Mask="false"/>
  <Config Name="Appdata" Target="/appdata" Default="" Mode="rw" Description="Appdata" Type="Path" Display="advanced" Required="false" Mask="false"></Config>
  <Config Name="Web Port" Target="8080" Default="8080" Mode="tcp" Description="For access to the WebUI" Type="Port" Display="advanced" Required="false" Mask="false">8080</Config>
  <Config Name="TIMEFRAME" Target="TIMEFRAME" Default="" Mode="" Description="Minutes between recreation of Map (Between 1 and 60)" Type="Variable" Display="advanced" Required="false" Mask="false">30</Config>
</Container>